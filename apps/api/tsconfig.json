{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "baseUrl": "./",
    "rootDir": "./",

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
