{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "rootDir": "./",

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
